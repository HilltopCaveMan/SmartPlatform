
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录</title>
    <style type="text/css">
        body {
            margin-left: 0px;
            margin-top: 0px;
        }

        body, td, th {
            font-size: 12px;
        }

        table {
            border-collapse: collapse;
        }
    </style>
</head>
<body>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td colspan="2"><img src="../../Content/images/q_01.gif" width="1440" height="106" /></td>
        </tr>
        <tr>
            <td colspan="2"><img src="../../Content/images/q_02.gif" width="1440" height="128" /></td>
        </tr>
        <tr>
            <td width="49%"><img src="../../Content/images/q_03.gif" width="701" height="271" /></td>
            <td width="51%" background="../../Content/images/q_04.gif">
                <table width="100%" border="0">
                    <tr>
                        <td width="4%" height="104">&nbsp; &nbsp;</td>
                        <td width="96%">
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                <table width="420" height="201" border="0" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td width="60" height="54" align="right"></td>
                                        <td width="180"></td>
                                        <td width="180"></td>
                                    </tr>
                                    <tr>
                                        <td height="34" align="right"><div align="left">用户名：</div></td>
                                        <td><input  name="UserLname" id="LoginName"  type="text" /></td>
                                        <td> </td>
                                    </tr>
                                    <tr>
                                        <td height="35" align="right"><div align="left">密&nbsp; 码：</div></td>
                                        <td><input  name="UserPasswrd" id="PWD" type="password" /></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td height="16" colspan="3" align="left">@Html.ValidationSummary(true)</td>
                                    </tr>
                                    <tr>
                                        <td>&nbsp;</td>
                                        <td>
                                            <label class="checkbox inline">
                                                <input id="inlineCheckbox1" value="option1" type="checkbox">
                                                记住我
                                            </label>
                                            &nbsp;&nbsp;&nbsp;&nbsp;
                                            <input type="submit" value="登录" />
                                            <input name="url" type="hidden" id="url" value="" />
                                        </td>
                                        <td>&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td height="40" colspan="3" align="right"></td>
                                    </tr>
                                </table>
                            }
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td height="12" colspan="2"><img src="../../Content/images/q_05.gif" width="1440" height="235" /></td>
        </tr>
    </table>
</body>
</html>
