@using (Html.BeginForm("UpLoadCarInfoForm", "CarInfo", FormMethod.Post, new { @class = "", enctype = "multipart/form-data" }))
{
    <div class="stdform" style="padding:20px 70px 10px 60px">
        <p>
            <label><i>*</i>所属企业</label>
            <div class="field">
                <input id="TerminalBindDept" class="easyui-combobox" type="text" style="height:30px;" panelheight="200" />
                <b>

                </b>
            </div>
        </p>
        <p>
            <label><i>*</i>选择文件</label>
            <div class="field">
                <input id="up_img" name="file" type="file" />
            </div>
        </p>
    </div>
    <input id="DeptId" name="DeptId" type="hidden" />
    <div class="formfooter">
        <button class="stdbtn btn_blue" type="submit">确定</button>
        <button class="stdbtn btn_default" type="button" onclick="clearForm()">取消</button>
    </div>
}

<script src="~/assets/javascripts/Common.js"></script>

<script type="text/javascript">

    $(function () {
        $("#TerminalBindDept").combotree({
            url: '/Dept/GetOrgNode',
            editable: true,
            queryParams: { isTree: "false" },
            onSelect: function (node) {
                //$('#CarTypeDept').combotree('setValue', '@ViewBag.DeptId');
                $('#DeptId').val(node.id);
            }
        });
        BindSearchEvent($(" .textbox-text"), $("#TerminalBindDept"));
    });

    function clearForm() {
        window.parent.$(".dialog").dialog('close');
    };

</script>