        $("#onloadData").click(function () {
            map.clearOverlays();
            if ($("#HisDate").datebox("getValue") == "" || $("#EndDate").datebox("getValue") == "" || $("#begintime").timespinner("getValue") == "" || $("#endtime").timespinner("getValue") == "") {
                window.parent.$.messager.alert('提示', "请填写日期和时间段！",'info');
